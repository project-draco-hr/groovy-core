{
  final Expression fieldExpr=new VariableExpression(fieldNode);
  final VariableExpression localVar=var(fieldNode.getName() + "_local");
  body.addStatement(declS(localVar,fieldExpr));
  body.addStatement(ifElseS(notNullExpr(localVar),returnS(localVar),new SynchronizedStatement(syncTarget(fieldNode),ifElseS(notNullExpr(fieldExpr),returnS(fieldExpr),returnS(assignX(fieldExpr,initExpr))))));
}
