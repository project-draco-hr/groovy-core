{
  final Expression fieldExpr=new VariableExpression(fieldNode);
  final VariableExpression localVar=new VariableExpression(fieldNode.getName() + "_local");
  body.addStatement(declStatement(localVar,fieldExpr));
  body.addStatement(new IfStatement(notNullExpr(localVar),new ReturnStatement(localVar),new SynchronizedStatement(syncTarget(fieldNode),new IfStatement(notNullExpr(fieldExpr),new ReturnStatement(fieldExpr),new ReturnStatement(new BinaryExpression(fieldExpr,ASSIGN,initExpr))))));
}
