{
  CSTNode type=new CSTNode();
  Token la=(useBare ? la_bare() : la());
  if (la == null) {
  }
 else   if (la.isA(Token.IDENTIFIER)) {
    if (lt_bare(2) != -1 && la_bare(2).isA(OPTIONAL_DATATYPE_FOLLOWER)) {
      type=datatype(allowVoid);
    }
  }
 else   if (la.isPrimitiveTypeKeyword(true)) {
    type=datatype(allowVoid);
  }
  return type;
}
