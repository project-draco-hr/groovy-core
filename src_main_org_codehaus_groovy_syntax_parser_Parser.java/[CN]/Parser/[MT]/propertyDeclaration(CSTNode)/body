{
  CSTNode propertyDeclaration=rootNode(Token.KEYWORD_PROPERTY);
  propertyDeclaration.addChild(modifiers);
  CSTNode type=null;
  if (lt(2) == Token.DOT || lt(2) == Token.IDENTIFIER) {
    type=datatype();
  }
 else {
    type=new CSTNode();
  }
  consume(propertyDeclaration,Token.IDENTIFIER);
  propertyDeclaration.addChild(type);
  return propertyDeclaration;
}
