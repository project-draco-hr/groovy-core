{
  CSTNode body=null;
  if (lt() == Types.LEFT_CURLY_BRACE) {
    Token brace=consume(Types.LEFT_CURLY_BRACE);
    brace.setMeaning(Types.SYNTH_BLOCK);
    body=statementsUntilRightCurly();
    body.set(0,brace);
    consume(Types.RIGHT_CURLY_BRACE);
  }
 else {
    if (requireBraces) {
      error(Types.LEFT_CURLY_BRACE);
    }
 else {
      body=statement();
    }
  }
  return body;
}
