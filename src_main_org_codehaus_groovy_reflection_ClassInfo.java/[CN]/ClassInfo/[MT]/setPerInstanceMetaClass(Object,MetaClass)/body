{
  version++;
  if (metaClass != null) {
    if (perInstanceMetaClassMap == null)     perInstanceMetaClassMap=new ManagedConcurrentMap(perInstanceBundle);
    perInstanceMetaClassMap.put(obj,metaClass);
  }
 else {
    if (perInstanceMetaClassMap != null) {
      perInstanceMetaClassMap.remove(obj);
    }
  }
}
