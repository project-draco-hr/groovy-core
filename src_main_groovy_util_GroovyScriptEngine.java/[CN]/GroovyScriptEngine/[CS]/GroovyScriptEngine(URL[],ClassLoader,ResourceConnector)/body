{
  if (roots == null)   roots=new URL[0];
  this.roots=roots;
  if (rc == null)   rc=this;
  this.rc=rc;
  if (parent == CL_STUB)   parent=this.getClass().getClassLoader();
  this.parentLoader=parent;
  this.groovyLoader=initGroovyLoader();
  for (  URL root : roots)   this.groovyLoader.addURL(root);
}
