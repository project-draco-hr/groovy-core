{
  code=code.trim();
  if (code.indexOf("def") != 0) {
    code="def " + code;
  }
  ModuleNode module=createModule(code);
  List ms=module.getMethods();
  if (ms == null || ms.size() != 1) {
    throw new RuntimeException("no proper method node is created.");
  }
  return (MethodNode)ms.get(0);
}
