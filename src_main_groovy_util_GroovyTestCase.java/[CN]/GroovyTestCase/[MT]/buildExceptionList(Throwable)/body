{
  StringBuilder sb=new StringBuilder();
  int level=0;
  while (th != null) {
    if (level > 1) {
      for (int i=0; i < level - 1; i++)       sb.append("   ");
    }
    if (level > 0)     sb.append("-> ");
    sb.append(th.getClass().getName());
    sb.append("\n");
    th=th.getCause();
    level++;
  }
  return sb.toString();
}
