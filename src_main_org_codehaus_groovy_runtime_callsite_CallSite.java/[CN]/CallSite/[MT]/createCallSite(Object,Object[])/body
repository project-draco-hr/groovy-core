{
  CallSite site;
  if (receiver == null)   return new CallSite(this){
    public Object invoke(    Object receiver,    Object[] args){
      return InvokerHelper.invokeMethod(NullObject.getNullObject(),name,args);
    }
  }
;
  if (receiver instanceof Class)   site=createCallStaticSite((Class)receiver,args);
 else   if (!(receiver instanceof GroovyObject)) {
    site=createPojoSite(receiver,args);
  }
 else   site=createPogoSite(receiver,args);
  array.array[index]=site;
  return site;
}
