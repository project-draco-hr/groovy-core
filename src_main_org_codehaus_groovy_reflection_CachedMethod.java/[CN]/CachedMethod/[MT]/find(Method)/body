{
  CachedMethod[] methods=ReflectionCache.getCachedClass(method.getDeclaringClass()).getMethods();
  int i=Arrays.binarySearch(methods,method,new Comparator(){
    public int compare(    Object o1,    Object o2){
      if (o1 instanceof CachedMethod)       return ((CachedMethod)o1).compareTo(o2);
 else       if (o2 instanceof CachedMethod)       return -((CachedMethod)o2).compareTo(o1);
 else       throw new ClassCastException("One of the two comperables must be a CachedMethod");
    }
  }
);
  if (i < 0)   return null;
  return methods[i];
}
