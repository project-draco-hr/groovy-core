{
  String internalName=name.replace('.','/');
  cw.visit(Opcodes.V1_4,Opcodes.ACC_PUBLIC | Opcodes.ACC_SYNTHETIC,internalName,null,"org/codehaus/groovy/runtime/callsite/StaticMetaMethodSite",null);
