{
  Parameter[] setterParameterTypes={new Parameter(field.getType(),"value")};
  ClassNode[] exceptions={new ClassNode(PropertyVetoException.class)};
  MethodNode setter=new MethodNode(setterName,field.getModifiers(),ClassHelper.VOID_TYPE,setterParameterTypes,exceptions,setterBlock);
  setter.setSynthetic(true);
  declaringClass.addMethod(setter);
}
