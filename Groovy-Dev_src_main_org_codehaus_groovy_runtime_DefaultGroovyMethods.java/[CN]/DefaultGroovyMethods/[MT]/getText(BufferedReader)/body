{
  StringBuffer answer=new StringBuffer();
  char[] charBuffer=new char[4096];
  int nbCharRead;
  try {
    while ((nbCharRead=reader.read(charBuffer)) != -1) {
      answer.append(charBuffer,0,nbCharRead);
    }
    Reader temp=reader;
    reader=null;
    temp.close();
  }
  finally {
    closeReaderWithWarning(reader);
  }
  return answer.toString();
}
