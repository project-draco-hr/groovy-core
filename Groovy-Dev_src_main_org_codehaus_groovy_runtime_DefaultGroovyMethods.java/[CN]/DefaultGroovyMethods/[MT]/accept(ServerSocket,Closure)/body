{
  final Socket socket=serverSocket.accept();
  new Thread(new Runnable(){
    public void run(){
      try {
        closure.call(socket);
      }
  finally {
        try {
          socket.close();
        }
 catch (        IOException e) {
          LOG.warning("Caught exception closing socket: " + e);
        }
      }
    }
  }
).start();
  return socket;
}
