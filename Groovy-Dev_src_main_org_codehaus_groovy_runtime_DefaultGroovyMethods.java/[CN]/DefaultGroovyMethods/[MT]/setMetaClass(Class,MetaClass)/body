{
  final MetaClassRegistry metaClassRegistry=GroovySystem.getMetaClassRegistry();
  if (metaClass == null)   metaClassRegistry.removeMetaClass(c);
 else {
    if (metaClass instanceof HandleMetaClass)     metaClassRegistry.setMetaClass(c,((HandleMetaClass)metaClass).getAdaptee());
 else     metaClassRegistry.setMetaClass(c,metaClass);
  }
}
