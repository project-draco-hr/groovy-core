{
  InputStreamReader isr=new InputStreamReader(in);
  BufferedReader br=new BufferedReader(isr);
  String next;
  try {
    while ((next=br.readLine()) != null) {
      if (sb != null) {
        sb.append(next);
        sb.append("\n");
      }
 else {
        w.write(next);
        w.write("\n");
      }
    }
  }
 catch (  IOException e) {
    throw new GroovyRuntimeException("exception while reading process stream",e);
  }
}
