{
  if (!inSpecialConstructorCall && (inClosure || !ve.isInStaticContext()))   return;
  if (stillResolving)   return;
  if (ve.isThisExpression() || ve.isSuperExpression())   return;
  Variable v=ve.getAccessedVariable();
  if (v != null && !(v instanceof DynamicVariable) && v.isInStaticContext())   return;
  addError("The name " + ve.getName() + " doesn't refer to a declared variable or class. The static"+ " scope requires that you declare variables before using them. If the variable should have"+ " been a class check the spelling.",ve);
}
