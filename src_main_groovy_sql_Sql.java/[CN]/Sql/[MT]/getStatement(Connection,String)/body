{
  Statement stmt;
  if (cacheStatements) {
    stmt=statementCache.get(sql);
    if (stmt == null) {
synchronized (statementCache) {
        stmt=createStatement(connection);
        statementCache.put(sql,stmt);
      }
    }
  }
 else {
    stmt=createStatement(connection);
  }
  return stmt;
}
