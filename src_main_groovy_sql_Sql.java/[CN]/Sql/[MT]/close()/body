{
  namedParamSqlCache.clear();
  namedParamIndexPropCache.clear();
  try {
    clearStatementCache();
  }
  finally {
    if (useConnection != null) {
      try {
        useConnection.close();
      }
 catch (      SQLException e) {
        LOG.finest("Caught exception closing connection: " + e.getMessage());
      }
    }
  }
}
