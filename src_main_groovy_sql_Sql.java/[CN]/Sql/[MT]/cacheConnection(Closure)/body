{
  cacheConnection=true;
  Connection connection=null;
  try {
    connection=createConnection();
    if (closure.getMaximumNumberOfParameters() == 1) {
      closure.call(connection);
    }
 else {
      closure.call();
    }
  }
  finally {
    cacheConnection=false;
    closeResources(connection,null);
  }
}
