{
  connection=createConnection();
  setInternalConnection(connection);
  statement=null;
  try {
    LOG.fine(sql);
    ResultSet result=runQuery(connection);
    assert(null != statement);
    return result;
  }
 catch (  SQLException e) {
    LOG.warning("Failed to execute: " + sql + " because: "+ e.getMessage());
    closeResources();
    connection=null;
    statement=null;
    throw e;
  }
}
