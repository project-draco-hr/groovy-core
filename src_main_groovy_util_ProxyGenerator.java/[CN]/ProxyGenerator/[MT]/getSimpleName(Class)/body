{
  if (c.isArray()) {
    int dimension=0;
    Class componentClass=c;
    while (componentClass.isArray()) {
      componentClass=componentClass.getComponentType();
      dimension++;
    }
    return componentClass.getName().replaceAll("\\$","\\.") + DefaultGroovyMethods.multiply("[]",new Integer(dimension));
  }
 else {
    return c.getName().replaceAll("\\$","\\.");
  }
}
