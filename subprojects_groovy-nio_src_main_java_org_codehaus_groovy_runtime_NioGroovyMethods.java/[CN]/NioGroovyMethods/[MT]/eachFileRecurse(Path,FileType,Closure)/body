{
  checkDir(self);
  Iterator<Path> itr=Files.newDirectoryStream(self).iterator();
  while (itr.hasNext()) {
    Path path=itr.next();
    if (Files.isDirectory(path)) {
      if (fileType != FileType.FILES)       closure.call(path);
      eachFileRecurse(path,fileType,closure);
    }
 else     if (fileType != FileType.DIRECTORIES) {
      closure.call(path);
    }
  }
}
