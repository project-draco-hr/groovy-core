{
  Writer writer=null;
  try {
    writer=new OutputStreamWriter(Files.newOutputStream(self,CREATE,APPEND),Charset.forName(charset));
    InvokerHelper.write(writer,text);
    writer.flush();
    Writer temp=writer;
    writer=null;
    temp.close();
  }
  finally {
    closeWithWarning(writer);
  }
}
