{
  try {
    closure.call(stream);
    InputStream temp=stream;
    stream=null;
    temp.close();
  }
  finally {
    if (stream != null) {
      try {
        stream.close();
      }
 catch (      Exception e) {
        LOG.warning("Caught exception closing InputStream: " + e);
      }
    }
  }
}
