{
  BufferedWriter writer=null;
  try {
    writer=newWriter(file,charset,true);
    InvokerHelper.write(writer,text);
    writer.flush();
    Writer temp=writer;
    writer=null;
    temp.close();
  }
  finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      Exception e) {
        LOG.warning("Caught exception closing Writer: " + e);
      }
    }
  }
}
