{
  checkDir(self);
  final File[] files=self.listFiles();
  if (files == null)   return;
  final MetaClass metaClass=InvokerHelper.getMetaClass(filter);
  for (  final File currentFile : files) {
    if ((!onlyDir || currentFile.isDirectory()) && DefaultTypeTransformation.castToBoolean(metaClass.invokeMethod(filter,"isCase",currentFile.getName()))) {
      closure.call(currentFile);
    }
  }
}
