{
  try {
    closure.call(writer);
    writer.flush();
    Writer temp=writer;
    writer=null;
    temp.close();
  }
  finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      Exception e) {
        log.warning("Caught exception closing Writer: " + e);
      }
    }
  }
}
