{
  checkDir(self);
  final File[] files=self.listFiles();
  if (files == null)   return;
  for (int i=0; i < files.length; i++) {
    if (files[i].isDirectory()) {
      closure.call(files[i]);
      eachFileRecurse(files[i],closure,onlyDir);
    }
 else     if (!onlyDir) {
      closure.call(files[i]);
    }
  }
}
