{
  Class[] params=MetaClassHelper.convertToTypeArray(args);
  MetaMethod metaMethod=getMethodWithCachingInternal(theClass,site.name,params);
  if (metaMethod != null)   return PogoMetaMethodSite.createPogoMetaMethodSite(site,this,metaMethod,params,args);
 else   return new PogoMetaClassSite(site,this);
}
