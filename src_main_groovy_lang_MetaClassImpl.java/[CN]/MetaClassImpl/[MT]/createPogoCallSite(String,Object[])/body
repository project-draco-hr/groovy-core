{
  Class[] params=MetaClassHelper.convertToTypeArray(args);
  MetaMethod metaMethod=getMethodWithCachingInternal(theClass,name,params);
  if (metaMethod != null)   return PogoMetaMethodSite.createPogoMetaMethodSite(this,metaMethod,name,params,args);
 else   return new PogoMetaClassSite(name,this);
}
