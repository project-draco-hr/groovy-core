{
  MethodNode method=null;
  List declaredMethods=getDeclaredMethods("<clinit>");
  if (declaredMethods.isEmpty()) {
    method=addMethod("<clinit>",ACC_PUBLIC | ACC_STATIC,ClassHelper.VOID_TYPE,Parameter.EMPTY_ARRAY,ClassNode.EMPTY_ARRAY,new BlockStatement());
    method.setSynthetic(true);
  }
 else {
    method=(MethodNode)declaredMethods.get(0);
  }
  BlockStatement block=null;
  Statement statement=method.getCode();
  if (statement == null) {
    block=new BlockStatement();
  }
 else   if (statement instanceof BlockStatement) {
    block=(BlockStatement)statement;
  }
 else {
    block=new BlockStatement();
    block.addStatement(statement);
  }
  block.addStatements(staticStatements);
}
