{
  String answer=null;
  if (type != null) {
    if (getName().equals(type) || getNameWithoutPackage().equals(type)) {
      return getName();
    }
    answer=tryResolveClassAndInnerClass(type);
    if (answer == null) {
      if (type.indexOf('.') > -1) {
        int lastPoint=type.lastIndexOf('.');
        String replacedPointType=new StringBuffer().append(type.substring(0,lastPoint)).append("$").append(type.substring(lastPoint + 1)).toString();
        answer=tryResolveClassAndInnerClass(replacedPointType);
      }
    }
  }
  return answer;
}
