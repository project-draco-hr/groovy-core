{
  Expression objectExpression=call.getObjectExpression();
  if (!isStaticMethod() && !isStaticContext() && isThisExpression(call.getObjectExpression())) {
    objectExpression=new CastExpression(classNode,objectExpression);
  }
  Expression messageName=new CastExpression(ClassHelper.STRING_TYPE,call.getMethod());
  if (useSuper) {
    ClassNode superClass=isInClosure() ? getOutermostClass().getSuperClass() : classNode.getSuperClass();
    makeCall(new ClassExpression(superClass),objectExpression,messageName,call.getArguments(),adapter,call.isSafe(),call.isSpreadSafe(),false);
  }
 else {
    makeCall(objectExpression,messageName,call.getArguments(),adapter,call.isSafe(),call.isSpreadSafe(),call.isImplicitThis());
  }
}
