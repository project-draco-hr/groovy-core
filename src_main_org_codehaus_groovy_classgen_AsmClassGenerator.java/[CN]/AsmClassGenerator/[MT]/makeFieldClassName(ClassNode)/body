{
  String internalName=BytecodeHelper.getClassInternalName(type);
  StringBuffer ret=new StringBuffer(internalName.length());
  for (int i=0; i < internalName.length(); i++) {
    char c=internalName.charAt(i);
    if (c == '/') {
      ret.append('$');
    }
 else     if (c == ';') {
    }
 else {
      ret.append(c);
    }
  }
  return ret.toString();
}
