{
  MethodVisitor mv=controller.getMethodVisitor();
  if (statement == null)   return;
  int line=statement.getLineNumber();
  this.currentASTNode=statement;
  if (line < 0)   return;
  if (!ASM_DEBUG && line == lineNumber)   return;
  lineNumber=line;
  if (mv != null) {
    Label l=new Label();
    mv.visitLabel(l);
    mv.visitLineNumber(line,l);
  }
}
