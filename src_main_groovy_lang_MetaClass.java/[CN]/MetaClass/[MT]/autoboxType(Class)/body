{
  if (type.isPrimitive()) {
    if (type == int.class) {
      return Integer.class;
    }
 else     if (type == double.class) {
      return Double.class;
    }
 else     if (type == long.class) {
      return Long.class;
    }
 else     if (type == float.class) {
      return Float.class;
    }
 else     if (type == char.class) {
      return Character.class;
    }
 else     if (type == byte.class) {
      return Byte.class;
    }
 else     if (type == short.class) {
      return Short.class;
    }
  }
  return type;
}
