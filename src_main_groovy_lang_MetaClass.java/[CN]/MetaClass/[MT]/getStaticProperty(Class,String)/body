{
  try {
    Field field=aClass.getField(property);
    if (field != null) {
      return field.get(null);
    }
  }
 catch (  Exception e) {
    throw new GroovyRuntimeException("Could not evaluate property: " + property,e);
  }
  throw new GroovyRuntimeException("No such property: " + property);
}
