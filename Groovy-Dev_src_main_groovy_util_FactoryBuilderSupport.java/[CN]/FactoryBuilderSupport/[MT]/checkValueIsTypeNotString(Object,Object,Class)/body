{
  if (value != null) {
    if (type.isAssignableFrom(value.getClass())) {
      return true;
    }
 else     if (value instanceof String) {
      return false;
    }
 else {
      throw new RuntimeException("The value argument of '" + name + "' must be of type "+ type.getName()+ " or a String.");
    }
  }
 else {
    return false;
  }
}
