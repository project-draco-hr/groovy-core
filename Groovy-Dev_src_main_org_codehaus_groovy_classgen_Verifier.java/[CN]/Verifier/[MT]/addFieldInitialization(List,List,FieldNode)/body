{
  Expression expression=fieldNode.getInitialExpression();
  if (expression != null) {
    ExpressionStatement statement=new ExpressionStatement(new BinaryExpression(new FieldExpression(fieldNode),Token.newSymbol(Types.EQUAL,fieldNode.getLineNumber(),fieldNode.getColumnNumber()),expression));
    if (fieldNode.isStatic()) {
      staticList.add(statement);
      fieldNode.setInitialValueExpression(null);
    }
 else {
      list.add(statement);
    }
  }
}
