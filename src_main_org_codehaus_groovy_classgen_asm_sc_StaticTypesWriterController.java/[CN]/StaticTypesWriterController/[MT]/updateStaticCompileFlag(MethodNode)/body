{
  ClassNode classNode=getClassNode();
  if (classNode.implementsInterface(ClassHelper.GENERATED_CLOSURE_Type)) {
    classNode=classNode.getOuterClass();
  }
  isInStaticallyCheckedMethod=mn != null && (!mn.getAnnotations(COMPILE_STATIC_ANNOTATION).isEmpty() || !classNode.getAnnotations(COMPILE_STATIC_ANNOTATION).isEmpty() || classNode.getNodeMetaData(STATIC_COMPILE_NODE) != null);
}
