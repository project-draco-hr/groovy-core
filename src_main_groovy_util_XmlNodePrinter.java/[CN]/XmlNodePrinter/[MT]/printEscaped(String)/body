{
  for (int i=0; i < s.length(); i++) {
    char c=s.charAt(i);
switch (c) {
case '<':
      out.print("&lt;");
    break;
case '>':
  out.print("&gt;");
break;
case '&':
out.print("&amp;");
break;
case '\'':
if (quote.equals("'")) out.print("&apos;");
 else out.print(c);
break;
case '"':
if (quote.equals("\"")) out.print("&quot;");
 else out.print(c);
break;
default :
out.print(c);
}
}
}
