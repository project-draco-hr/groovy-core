{
  if (object == null) {
    throw new GroovyRuntimeException("Cannot set attribute on null object");
  }
 else {
    if (object instanceof Class)     metaRegistry.getMetaClass((Class)object).setAttribute((Class)object,attribute,newValue);
 else     metaRegistry.getMetaClass(object.getClass()).setAttribute(object,attribute,newValue);
  }
}
