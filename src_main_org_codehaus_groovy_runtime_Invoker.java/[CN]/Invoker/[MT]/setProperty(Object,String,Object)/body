{
  if (object == null) {
    throw new GroovyRuntimeException("Cannot set property on null object");
  }
  if (object instanceof GroovyObject) {
    GroovyObject pogo=(GroovyObject)object;
    pogo.setProperty(property,newValue);
  }
 else {
    if (object instanceof Class)     metaRegistry.getMetaClass((Class)object).setProperty((Class)object,property,newValue);
 else     metaRegistry.getMetaClass(object.getClass()).setProperty(object,property,newValue);
  }
}
