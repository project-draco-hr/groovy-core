{
  for (int i=0, k=nextCacheEntry - 1; i < cache.length; i++, k--) {
    if (k < 0)     k+=CACHE_SIZE;
    final ClassInfo info=cache[k];
    if (klazz == info.get()) {
      nextCacheEntry=k + 1;
      if (nextCacheEntry == CACHE_SIZE)       nextCacheEntry=0;
      return info;
    }
  }
  return null;
}
