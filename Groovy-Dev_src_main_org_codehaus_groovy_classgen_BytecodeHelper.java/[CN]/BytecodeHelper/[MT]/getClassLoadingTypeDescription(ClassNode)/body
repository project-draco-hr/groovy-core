{
  StringBuffer buf=new StringBuffer();
  boolean array=false;
  while (true) {
    if (c.isArray()) {
      buf.append('[');
      c=c.getComponentType();
      array=true;
    }
 else {
      if (ClassHelper.isPrimitiveType(c)) {
        buf.append(getTypeDescription(c));
      }
 else {
        if (array)         buf.append('L');
        buf.append(c.getName());
        if (array)         buf.append(';');
      }
      return buf.toString();
    }
  }
}
