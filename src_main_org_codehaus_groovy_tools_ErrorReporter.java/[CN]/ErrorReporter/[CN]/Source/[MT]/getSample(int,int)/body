{
  String sample=null;
  if (getLine(lineNumber) != null) {
    if (column > 0) {
      String marker=repeatString(" ",column - 1) + "^";
      if (column > 40) {
        sample="   " + line.substring(column - 30,column + 10) + eol()+ "   "+ marker.substring(column - 30,column + 10);
      }
 else {
        sample="   " + line + eol()+ "   "+ marker;
      }
    }
 else {
      sample=line;
    }
  }
  return sample;
}
