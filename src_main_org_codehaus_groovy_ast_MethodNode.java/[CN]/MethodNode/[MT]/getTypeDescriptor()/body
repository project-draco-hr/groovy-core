{
  StringBuffer buf=new StringBuffer(name.length() + parameters.length * 10);
  buf.append(returnType.getName());
  buf.append(' ');
  buf.append(name);
  buf.append('(');
  for (int i=0; i < parameters.length; i++) {
    if (i > 0) {
      buf.append(", ");
    }
    Parameter param=parameters[i];
    buf.append(param.getType().getName());
  }
  buf.append(')');
  return buf.toString();
}
