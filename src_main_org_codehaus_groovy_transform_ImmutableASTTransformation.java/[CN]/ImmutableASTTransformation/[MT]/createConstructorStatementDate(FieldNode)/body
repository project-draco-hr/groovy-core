{
  final FieldExpression fieldExpr=new FieldExpression(fNode);
  Expression initExpr=fNode.getInitialValueExpression();
  if (initExpr == null)   initExpr=ConstantExpression.NULL;
  final Expression date=findArg(fNode.getName());
  return new IfStatement(equalsNullExpr(date),new IfStatement(equalsNullExpr(initExpr),assignStatement(fieldExpr,ConstantExpression.NULL),assignStatement(fieldExpr,cloneDateExpr(initExpr))),assignStatement(fieldExpr,cloneDateExpr(date)));
}
