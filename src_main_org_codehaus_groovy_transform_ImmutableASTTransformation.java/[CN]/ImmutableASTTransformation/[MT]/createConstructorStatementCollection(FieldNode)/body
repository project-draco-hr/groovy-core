{
  final FieldExpression fieldExpr=new FieldExpression(fNode);
  Expression initExpr=fNode.getInitialValueExpression();
  if (initExpr == null)   initExpr=ConstantExpression.NULL;
  Expression collection=findArg(fNode.getName());
  return new IfStatement(equalsNullExpr(collection),new IfStatement(equalsNullExpr(initExpr),new EmptyStatement(),assignStatement(fieldExpr,cloneCollectionExpr(initExpr))),assignStatement(fieldExpr,cloneCollectionExpr(collection)));
}
