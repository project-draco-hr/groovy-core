{
  if (nodes.length != 2 || !(nodes[0] instanceof AnnotationNode) || !(nodes[1] instanceof AnnotatedNode)) {
    throw new GroovyBugError("Internal error: expecting [AnnotationNode, AnnotatedNode] but got: " + Arrays.asList(nodes));
  }
  AnnotatedNode parent=(AnnotatedNode)nodes[1];
  AnnotationNode node=(AnnotationNode)nodes[0];
  if (!MY_TYPE.equals(node.getClassNode()))   return;
  if (parent instanceof FieldNode) {
    FieldNode fNode=(FieldNode)parent;
    ClassNode cNode=fNode.getDeclaringClass();
    if (cNode.getProperty(fNode.getName()) == null) {
      addError("Error during " + MY_TYPE_NAME + " processing. Field '"+ fNode.getName()+ "' doesn't appear to be a property; incorrect visibility?",fNode,source);
      return;
    }
    ClassNode fType=fNode.getType();
    if (fType.isArray()) {
      addArraySetter(fNode);
      addArrayGetter(fNode);
    }
 else     if (fType.isDerivedFrom(LIST_TYPE)) {
      addListSetter(fNode);
      addListGetter(fNode);
    }
 else {
      addError("Error during " + MY_TYPE_NAME + " processing. Non-Indexable property '"+ fNode.getName()+ "' found. Type must be array or list but found "+ fType.getName(),fNode,source);
    }
  }
}
