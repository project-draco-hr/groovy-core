  String script="" + "abstract class DeclaredBaseScript extends Script {\n" + "   def v = { it * 2 }\n"+ "   def getProperty(String n) { n == 'c' ? v : super.getProperty(n) }\n"+ "}\n"+ "@groovy.transform.BaseScript DeclaredBaseScript baseScript\n"+ "assert c(2) == 4";
