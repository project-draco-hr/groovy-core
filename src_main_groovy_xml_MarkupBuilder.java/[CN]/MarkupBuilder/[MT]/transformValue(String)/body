{
  if (value.matches(".*&.*")) {
    value=value.replaceAll("&","&amp;");
  }
  if (value.matches(".*\\'.*")) {
    value=value.replaceAll("\'","&apos;");
  }
  if (value.matches(".*<.*")) {
    value=value.replaceAll("<","&lt;");
  }
  if (value.matches(".*>.*")) {
    value=value.replaceAll(">","&gt;");
  }
  return value;
}
