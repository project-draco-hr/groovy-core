{
  StringBuffer buffer=new StringBuffer();
  while (true) {
    System.out.print("groovy> ");
    String line=reader.readLine();
    if (line != null) {
      buffer.append(line);
      buffer.append('\n');
    }
    if (line == null || line.trim().length() == 0) {
      break;
    }
  }
  return buffer.toString().trim();
}
