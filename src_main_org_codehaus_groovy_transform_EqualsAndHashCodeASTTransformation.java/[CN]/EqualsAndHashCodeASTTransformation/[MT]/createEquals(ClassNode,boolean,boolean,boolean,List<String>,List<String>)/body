{
  if (useCanEqual)   createCanEqual(cNode);
  boolean hasExistingEquals=hasDeclaredMethod(cNode,"equals",1);
  if (hasExistingEquals && hasDeclaredMethod(cNode,"_equals",1))   return;
  final BlockStatement body=new BlockStatement();
  VariableExpression other=var("other");
  body.addStatement(returnFalseIfNull(other));
  body.addStatement(returnTrueIfIdentical(VariableExpression.THIS_EXPRESSION,other));
  if (useCanEqual) {
    body.addStatement(returnFalseIfNotInstanceof(cNode,other));
    body.addStatement(ifS(not(callX(other,"canEqual",VariableExpression.THIS_EXPRESSION)),returnS(ConstantExpression.FALSE)));
  }
 else {
    body.addStatement(returnFalseIfWrongType(cNode,other));
  }
  VariableExpression otherTyped=var("otherTyped");
  body.addStatement(declS(otherTyped,new CastExpression(cNode,other)));
  List<PropertyNode> pList=getInstanceProperties(cNode);
  for (  PropertyNode pNode : pList) {
    if (shouldSkip(pNode.getName(),excludes,includes))     continue;
    body.addStatement(ifS(differentPropertyX(pNode,otherTyped),ifElseS(differentSelfRecursivePropertyExpr(pNode,otherTyped),returnS(ConstantExpression.FALSE),ifS(not(bothSelfRecursivePropertyExpr(pNode,otherTyped)),returnFalseIfPropertyNotEqual(pNode,otherTyped)))));
  }
  List<FieldNode> fList=new ArrayList<FieldNode>();
  if (includeFields) {
    fList.addAll(getInstanceNonPropertyFields(cNode));
  }
  for (  FieldNode fNode : fList) {
    if (shouldSkip(fNode.getName(),excludes,includes))     continue;
    body.addStatement(ifS(differentFieldX(fNode,otherTyped),ifElseS(differentSelfRecursiveFieldExpr(fNode,otherTyped),returnS(ConstantExpression.FALSE),ifS(not(bothSelfRecursiveFieldExpr(fNode,otherTyped)),returnFalseIfFieldNotEqual(fNode,otherTyped)))));
  }
  if (callSuper) {
    body.addStatement(ifS(not(isTrueX(callSuperX("equals",other))),returnS(ConstantExpression.FALSE)));
  }
  body.addStatement(returnS(ConstantExpression.TRUE));
  cNode.addMethod(new MethodNode(hasExistingEquals ? "_equals" : "equals",hasExistingEquals ? ACC_PRIVATE : ACC_PUBLIC,ClassHelper.boolean_TYPE,params(param(OBJECT_TYPE,other.getName())),ClassNode.EMPTY_ARRAY,body));
}
